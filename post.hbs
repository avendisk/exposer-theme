{{!< default}}
<script type="text/javascript" src="{{asset 'js/citationhelper.js'}}"></script>
<link rel="stylesheet" type="text/css" href="{{asset 'css/post.css'}}"/>
{{#post}}
<main class="content" role="main">
    <div>
    <article class="post pure-u-4-5">
        <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
            <div class="post-subtitle">
                posted by 
                <span class="post-author">{{authors}}</span>
                <div> 
                <span class="date">
                    <time datetime=""{{date format="YYYY-MM-DD"}}>
                        {{date format="YYYY-MM-DD"}}
                    </time>

                {{#if tags}}in <span class="exposer-post-tag">{{tags}}</span>{{/if}}
            </div>
        </header>




        <section class="post-content">
            {{content}}
        </section>
        
        <!-- if we had a footer it would go here maybe citations? -->
    </article>
    <aside class="author-aside pure-u-1-5">
        {{#primary_author}}
            <a href="{{url}}">
            <img class="author-img" src="{{image_url}}" alt="exposer team icon" title="the Exposer Team"/>
            </a>            
            <a href="{{url}}"><h3 class="author-name">{{name}}</h3></a>
            <section>{{bio}}</section> 
            <!-- {{website}} -->
            <!--{{cover_image}}-->
        {{/primary_author}}
    </aside>
    </div>
</main>
{{/post}}

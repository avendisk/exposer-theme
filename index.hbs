{{!< default}}

<header class="pure-u-1-1 exposer-header" >
<!--{{#if @blog.cover}}style="background-image: url({{@blog.cover}}); background-repeat:no-repeat" {{/if}} role="banner">
-->
    <h1 class="exposer-title"><sup id="exposer-title-superscript">The</sup>Exposer</h1>
    <section>
        {{#if @blog.logo}}
            <a class="blog-logo pure-img" href="{{@blog.url}}">
                <img src="{{@blog.logo}}" alt="Blog Logo"/>
            </a>
        {{/if}}
    </section>
</header>

<nav>
<!--we need to add more pure tags so it does adequate resizing for small screens-->
<a class="nav-item pure-u-1-5" href="#">Home</a>
<a class="nav-item pure-u-1-5" href="#">Technology</a>
<a class="nav-item pure-u-1-5" href="#">Humor</a>
<a class="nav-item pure-u-1-5" href="#">Rangs</a>
<a class="nav-item pure-u-1-5" href="#">Other</a>
</nav>


<main class="content" role="main">
    {{#foreach posts}}
    {{#if @first}}
         <article class="exposer-post {{post-class}} pure-u-1-1">
    {{else}}         
        {{#if @last}}
            <article class="exposer-post {{post-class}} pure-u-1-1">
            {{else}}
                 <article class="exposer-post {{post-class}} pure-u-1-4"><!-- pure-u-md-1-3 pure-u-lg-1-4">-->
        {{/if}}
    {{/if}}
        <header class="exposer-post-header">
            <h2 class="exposer-post-title"><a href="{{url}}">{{title}}</a></h2>
            <span>{{#if tags}}on {{tags}}{{/if}}</span>
        </header>

        <section class="exposer-post-content">
            {{content words="100"}}
        </section>

        <footer class="exposer-post-footer">
            <span class="exposer-date"><time datetime=""{{date format="YYYY-MM-DD"}}>{{date format="YYYY-MM-DD"}}</time></span>
            <div class="button">
                <a href="{{url}}">Read More</a>
            </div>
        </footer>
    </article>
   {{/foreach}}
</main>




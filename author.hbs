{{!< default}}

<main class="content" role="main">
    <!-- author section may need a different semantic tag -->
    <div class="pure-u-1">
    <section class="author-section">
        {{#author}}
            <a href="{{url}}">
                <img class="author-img" src="{{image}}" alt="exposer team icon" title="the Exposer Team"/>
            </a>
            <div class="author-bio">                        
                <a href="{{url}}"><h2 class="author-name">{{name}}</h2></a>
                <section>{{bio}}</section> 
                <a class="author-website" href="{{website}}">{{website}}</a>
            </div>
        {{/author}}
    </section>
    </div>
    {{#foreach posts}}
        <article class="post {{post-class}} pure-u-1">
            {{> post-list}}
        </article>
    {{/foreach}}
</main>



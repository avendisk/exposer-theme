{{!< default}}

<main class="content" role="main">
    {{#foreach posts}}
    {{#if @first}}
         <article class="post {{post-class}} pure-u-1">
    {{else}}         
        {{#if @last}}
            <article class="post {{post-class}} pure-u-1">
            {{else}}
                 <article class="post {{post-class}} pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
        {{/if}}
    {{/if}}
        <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
            {{#if tags}}<span class="exposer-post-tag">{{tags}}</span>{{/if}}
        </header>

        <section class="post-content">
            {{content words="100"}}
        </section>

        <footer class="post-footer">
            <span class="date"><time datetime=""{{date format="YYYY-MM-DD"}}>{{date format="YYYY-MM-DD"}}</time></span>
            <div class="button">
                <a href="{{url}}">Read More</a>
            </div>
        </footer>
    </article>
   {{/foreach}}
</main>


